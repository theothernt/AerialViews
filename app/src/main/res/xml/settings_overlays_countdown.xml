<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/category_countdown">
                <EditTextPreference
                    app:summary="@string/appearance_countdown_target_time_summary"
                    app:key="countdown_target_time"
                    app:title="@string/appearance_countdown_target_time_title" />

                <EditTextPreference
                    app:summary="@string/appearance_countdown_target_message_summary"
                    app:key="countdown_target_message"
                    app:title="@string/appearance_countdown_target_message_title" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_typography">
                <ListPreference
                    app:defaultValue="@string/text_size_default"
                    app:entries="@array/text_size_entries"
                    app:entryValues="@array/text_size_values"
                    app:key="countdown_size"
                    app:title="@string/text_size_title"
                    app:useSimpleSummaryProvider="true" />

                <ListPreference
                    app:defaultValue="@string/text_weight_default"
                    app:entries="@array/text_weight_entries"
                    app:entryValues="@array/text_weight_values"
                    app:key="countdown_weight"
                    app:title="@string/text_weight_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
</PreferenceScreen>
