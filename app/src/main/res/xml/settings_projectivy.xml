<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_source">

                <MultiSelectListPreference
                    app:key="projectivy_select_videos"
                    app:entries="@array/projectivy_shared_providers_entries"
                    app:entryValues="@array/projectivy_shared_providers_values"
                    app:defaultValue="@array/projectivy_shared_providers_default"
                    app:title="@string/projectivy_select_videos_title"
                    app:summary="@string/projectivy_select_videos_summary" />

                <Preference
                    app:key="projectivy_apple_videos_options"
                    app:title="@string/projectivy_apple_videos_options_title"
                    app:summary="@string/projectivy_apple_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyAppleVideosFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_amazon_videos_options"
                    app:title="@string/projectivy_amazon_videos_options_title"
                    app:summary="@string/projectivy_amazon_videos_options_summary"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_comm1_videos_options"
                    app:title="@string/projectivy_comm1_videos_options_title"
                    app:summary="@string/projectivy_comm1_videos_options_summary"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_comm2_videos_options"
                    app:title="@string/projectivy_comm2_videos_options_title"
                    app:summary="@string/projectivy_comm2_videos_options_summary"
                    app:isPreferenceVisible="false"/>

        </PreferenceCategory>
</PreferenceScreen>
