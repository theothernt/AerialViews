<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_sources">
                <MultiSelectListPreference
                    app:key="projectivy_shared_providers"
                    app:entries="@array/projectivy_shared_providers_entries"
                    app:entryValues="@array/projectivy_shared_providers_values"
                    app:defaultValue="@array/projectivy_shared_providers_default"
                    app:title="@string/projectivy_select_videos_title"
                    app:summary="@string/projectivy_select_videos_summary" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_options">
                <SwitchPreferenceCompat
                    app:key="projectivy_shuffle_videos"
                    app:title="@string/projectivy_shuffle_videos_title"
                    app:summary="@string/projectivy_shuffle_videos_summary"
                    app:defaultValue="true" />

                <Preference
                    app:key="projectivy_apple_videos_options"
                    app:title="@string/projectivy_apple_videos_options_title"
                    app:summary="@string/projectivy_apple_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyAppleVideosFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_amazon_videos_options"
                    app:title="@string/projectivy_amazon_videos_options_title"
                    app:summary="@string/projectivy_apple_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyAmazonVideosFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_comm1_videos_options"
                    app:title="@string/projectivy_comm1_videos_options_title"
                    app:summary="@string/projectivy_apple_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyComm1VideosFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_comm2_videos_options"
                    app:title="@string/projectivy_comm2_videos_options_title"
                    app:summary="@string/projectivy_apple_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyComm2VideosFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:key="projectivy_local_videos_options"
                    app:title="@string/projectivy_local_videos_options_title"
                    app:summary="@string/projectivy_local_videos_options_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.ProjectivyLocalVideosFragment"
                    app:isPreferenceVisible="false"/>
        </PreferenceCategory>
</PreferenceScreen>
