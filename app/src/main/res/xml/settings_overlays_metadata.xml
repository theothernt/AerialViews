<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/appearance_metadata_slot1_title">
                <Preference
                    app:title="@string/appearance_metadata_fields_title"
                    app:summary="@string/appearance_metadata_slot1_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysMetadataSlotFragment" />

                <ListPreference
                    app:defaultValue="@string/text_size_default"
                    app:entries="@array/text_size_entries"
                    app:entryValues="@array/text_size_values"
                    app:key="overlay_metadata1_size"
                    app:title="@string/text_size_title"
                    app:useSimpleSummaryProvider="true" />

                <ListPreference
                    app:defaultValue="@string/text_weight_default"
                    app:entries="@array/text_weight_entries"
                    app:entryValues="@array/text_weight_values"
                    app:key="overlay_metadata1_weight"
                    app:title="@string/text_weight_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/appearance_metadata_slot2_title">
                <Preference
                    app:title="@string/appearance_metadata_fields_title"
                    app:summary="@string/appearance_metadata_slot2_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysMetadataSlot2Fragment" />

                <ListPreference
                    app:defaultValue="@string/text_size_default"
                    app:entries="@array/text_size_entries"
                    app:entryValues="@array/text_size_values"
                    app:key="overlay_metadata2_size"
                    app:title="@string/text_size_title"
                    app:useSimpleSummaryProvider="true" />

                <ListPreference
                    app:defaultValue="@string/text_weight_default"
                    app:entries="@array/text_weight_entries"
                    app:entryValues="@array/text_weight_values"
                    app:key="overlay_metadata2_weight"
                    app:title="@string/text_weight_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

</PreferenceScreen>
