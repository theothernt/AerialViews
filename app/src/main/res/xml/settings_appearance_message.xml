<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_message">
                <ListPreference
                    app:defaultValue="@string/appearance_message_style_default"
                    app:entries="@array/appearance_message_style_entries"
                    app:entryValues="@array/appearance_message_style_values"
                    app:key="message_style"
                    app:title="@string/appearance_message_style_title"
                    app:dialogTitle="@string/appearance_message_style_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_options">
                <EditTextPreference
                    app:summary="@string/appearance_message_line1_summary"
                    app:key="message_line1"
                    app:title="@string/appearance_message_line1_title" />

                <EditTextPreference
                    app:summary="@string/appearance_message_line1_summary"
                    app:key="message_line2"
                    app:title="@string/appearance_message_line2_title" />

                <ListPreference
                    app:defaultValue="@string/appearance_message_size_default"
                    app:entries="@array/appearance_message_size_entries"
                    app:entryValues="@array/appearance_message_size_values"
                    app:key="message_size"
                    app:title="@string/appearance_message_size_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
</PreferenceScreen>
