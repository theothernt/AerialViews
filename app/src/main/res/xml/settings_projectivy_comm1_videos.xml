<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_quality_and_scene_types">

                <ListPreference
                    app:defaultValue="@string/comm1_videos_quality_default"
                    app:entries="@array/comm1_videos_quality_entries"
                    app:entryValues="@array/comm1_videos_quality_values"
                    app:key="projectivy_comm1_videos_quality"
                    app:title="@string/videos_quality_title"
                    app:useSimpleSummaryProvider="true"
                    app:dialogTitle="@string/videos_quality_summary" />

                <MultiSelectListPreference
                    app:entries="@array/video_scene_type_entries"
                    app:entryValues="@array/video_scene_type_values"
                    app:defaultValue="@array/video_scene_type_default"
                    app:key="projectivy_comm1_videos_scene_type"
                    app:title="@string/apple_videos_scene_type_title"
                    app:dialogTitle="@string/apple_videos_scene_type_title" />

                <MultiSelectListPreference
                    app:entries="@array/video_time_of_day_entries"
                    app:entryValues="@array/video_time_of_day_values"
                    app:defaultValue="@array/video_time_of_day_default"
                    app:key="projectivy_comm1_videos_time_of_day"
                    app:title="@string/apple_videos_time_of_day_title"
                    app:dialogTitle="@string/apple_videos_time_of_day_title" />
        </PreferenceCategory>
</PreferenceScreen>

