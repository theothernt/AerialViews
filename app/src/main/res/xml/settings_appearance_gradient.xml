<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_gradient">
                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="gradient_top_show"
                    app:summary="@string/appearance_gradient_top_summary"
                    app:title="@string/appearance_gradient_top_title" />

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="gradient_bottom_show"
                    app:summary="@string/appearance_gradient_bottom_summary"
                    app:title="@string/appearance_gradient_bottom_title" />
        </PreferenceCategory>
</PreferenceScreen>
