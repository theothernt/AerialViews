<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/app_name">
        <Preference
            app:title="@string/settings_media_sources_title"
            app:summary="@string/settings_media_sources_summary"
            app:fragment="com.neilturner.aerialviews.ui.sources.SourcesFragment"/>

        <Preference
            app:title="@string/settings_settings_title"
            app:summary="@string/settings_settings_summary"
            app:fragment="com.neilturner.aerialviews.ui.settings.SettingsFragment"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/category_actions">
        <Preference
            app:key="preview_screensaver"
            app:title="@string/settings_preview_screensaver" />

        <Preference
            app:key="system_options"
            app:title="@string/settings_system_options" />

        <com.neilturner.aerialviews.ui.controls.SortableItemPreference
            app:key="test_exif_sortable_fields"
            app:title="@string/test_exif_sortable_fields_title"
            app:summary="@string/test_exif_sortable_fields_summary"
            app:dialogTitle="@string/test_exif_sortable_fields_title"
            app:entries="@array/test_exif_sortable_field_entries"
            app:entryValues="@array/test_exif_sortable_field_values"
            app:defaultValue="datetime_original,gps_latitude,gps_longitude,camera_model,lens_model,iso,f_number,exposure_time,focal_length,altitude" />
    </PreferenceCategory>

</PreferenceScreen>
