<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <PreferenceCategory app:title="@string/category_dpad_press">
                <ListPreference
                    app:entries="@array/button_action_entries"
                    app:entryValues="@array/button_action_values"
                    app:defaultValue="@string/button_action_default2"
                    app:key="button_right_press"
                    app:useSimpleSummaryProvider="true"
                    app:title="@string/dpad_button_right_title" />

                <ListPreference
                    app:entries="@array/button_action_entries"
                    app:entryValues="@array/button_action_values"
                    app:defaultValue="@string/button_action_default3"
                    app:key="button_left_press"
                    app:useSimpleSummaryProvider="true"
                    app:title="@string/dpad_button_left_title" />

                <ListPreference
                    app:entries="@array/button_action_entries"
                    app:entryValues="@array/button_action_values"
                    app:defaultValue="@string/button_action_default"
                    app:key="button_up_press"
                    app:useSimpleSummaryProvider="true"
                    app:title="@string/dpad_button_up_title" />

                <ListPreference
                    app:entries="@array/button_action_entries"
                    app:entryValues="@array/button_action_values"
                    app:defaultValue="@string/button_action_default"
                    app:key="button_down_press"
                    app:useSimpleSummaryProvider="true"
                    app:title="@string/dpad_button_down_title" />

                <ListPreference
                    app:entries="@array/button_action_entries"
                    app:entryValues="@array/button_action_values"
                    app:defaultValue="@string/button_action_default"
                    app:key="button_ok_press"
                    app:useSimpleSummaryProvider="true"
                    app:title="@string/dpad_button_ok_title" />
        </PreferenceCategory>

        <PreferenceCategory
            app:title="@string/category_permission"
            app:key="music_permission_option"
            app:isPreferenceVisible="false">
                <Preference
                    app:title="@string/dpad_music_permission_title"
                    app:summary="@string/dpad_music_permission_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysNowPlayingFragment"/>
        </PreferenceCategory>

        <PreferenceCategory
            app:title="@string/category_startup"
            app:key="screensaver_on_launch_option"
            app:isPreferenceVisible="false">
                <Preference
                    app:title="@string/dpad_screensaver_on_launch_title"
                    app:summary="@string/dpad_screensaver_on_launch_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceStartupFragment"/>
        </PreferenceCategory>
</PreferenceScreen>
