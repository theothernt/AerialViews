<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_permission">
                <SwitchPreference
                    app:defaultValue="false"
                    app:enabled="false"
                    app:key="nowplaying_permission"
                    app:title="@string/nowplaying_permission_title"
                    app:summary="@string/nowplaying_permission_summary" />

                <Preference
                    app:isPreferenceVisible="false"
                    app:key="nowplaying_permission_legacy_notice"
                    app:selectable="false"
                    app:summary="@string/nowplaying_permission_legacy_notice_summary"/>

                <Preference
                    app:isPreferenceVisible="false"
                    app:key="nowplaying_permission_notice"
                    app:selectable="false"
                    app:summary="@string/nowplaying_permission_notice_summary"/>

        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_now_playing">
                <ListPreference
                    app:defaultValue="@string/nowplaying_format_default"
                    app:entries="@array/nowplaying_format_entries"
                    app:entryValues="@array/nowplaying_format_values"
                    app:key="nowplaying_line1"
                    app:title="@string/nowplaying_line1_title"
                    app:useSimpleSummaryProvider="true" />

                <ListPreference
                    app:defaultValue="@string/nowplaying_format_default2"
                    app:entries="@array/nowplaying_format_entries"
                    app:entryValues="@array/nowplaying_format_values"
                    app:key="nowplaying_line2"
                    app:title="@string/nowplaying_line2_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_typography">
                <ListPreference
                    app:defaultValue="@string/text_size_default"
                    app:entries="@array/text_size_entries"
                    app:entryValues="@array/text_size_values"
                    app:key="nowplaying_size"
                    app:title="@string/text_size_title"
                    app:useSimpleSummaryProvider="true" />

                <ListPreference
                    app:defaultValue="@string/text_weight_default"
                    app:entries="@array/text_weight_entries"
                    app:entryValues="@array/text_weight_values"
                    app:key="nowplaying_weight"
                    app:title="@string/text_weight_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
</PreferenceScreen>
