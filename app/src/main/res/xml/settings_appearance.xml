                <Preference
                    app:title="@string/appearance_background_colour_title"
                    app:summary="@string/appearance_background_colour_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceBackgroundFragment"/>

                <Preference
                    app:title="@string/appearance_brightness_title"
                    app:summary="@string/appearance_brightness_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceBrightnessFragment"/>

                <Preference
                    app:title="@string/appearance_scaling_title"
                    app:summary="@string/appearance_scaling_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceScalingFragment"/>

                <Preference
                    app:title="@string/appearance_typography_title"
                    app:summary="@string/appearance_typography_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceTypographyFragment"/>
        </PreferenceCategory>
</PreferenceScreen>
