<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_slots">
                <Preference
                    app:title="@string/appearance_slots_title"
                    app:summary="@string/appearance_slots_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysCombinedRowsFragment"/>

                <!-- Legacy separate views, hidden from UI -->
                <Preference
                    app:title="@string/appearance_top_row_title"
                    app:summary="@string/appearance_top_row_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysRowTopFragment"
                    app:isPreferenceVisible="false"/>

                <Preference
                    app:title="@string/appearance_bottom_row_title"
                    app:summary="@string/appearance_bottom_row_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysRowBottomFragment"
                    app:isPreferenceVisible="false"/>
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_overlays">
                <Preference
                    app:title="@string/appearance_location_title"
                    app:summary="@string/appearance_location_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysLocationFragment"/>

                <Preference
                    app:title="@string/appearance_clock_title"
                    app:summary="@string/appearance_clock_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysClockFragment"/>

                <Preference
                    app:title="@string/appearance_weather_title"
                    app:summary="@string/appearance_weather_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysWeatherFragment"/>

                <Preference
                    app:title="@string/appearance_music_title"
                    app:summary="@string/appearance_music_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysNowPlayingFragment"/>

                <Preference
                    app:title="@string/appearance_date_title"
                    app:summary="@string/appearance_date_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysDateFragment"/>

                <Preference
                    app:title="@string/appearance_message_title"
                    app:summary="@string/appearance_message_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.OverlaysMessageFragment"/>

        </PreferenceCategory>
</PreferenceScreen>
