<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_video_source">
                <SwitchPreference
                    app:defaultValue="true"
                    app:key="amazon_videos_enabled"
                    app:title="@string/amazon_videos_enabled" />
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_quality_and_scene_types">
                <ListPreference
                    app:dependency="amazon_videos_enabled"
                    app:disableDependentsState="false"
                    app:defaultValue="@string/amazon_videos_quality_default"
                    app:entries="@array/amazon_videos_quality_entries"
                    app:entryValues="@array/amazon_videos_quality_values"
                    app:key="amazon_videos_quality"
                    app:title="@string/videos_quality_title"
                    app:useSimpleSummaryProvider="true"
                    app:dialogTitle="@string/videos_quality_summary" />

                <MultiSelectListPreference
                    app:dependency="amazon_videos_enabled"
                    app:disableDependentsState="false"
                    app:entries="@array/amazon_video_scene_type_entries"
                    app:entryValues="@array/amazon_video_scene_type_values"
                    app:defaultValue="@array/amazon_video_scene_type_default"
                    app:key="amazon_videos_scene_type"
                    app:title="@string/apple_videos_scene_type_title"
                    app:dialogTitle="@string/apple_videos_scene_type_title" />

                <MultiSelectListPreference
                    app:dependency="amazon_videos_enabled"
                    app:disableDependentsState="false"
                    app:entries="@array/video_time_of_day_entries"
                    app:entryValues="@array/video_time_of_day_values"
                    app:defaultValue="@array/video_time_of_day_default"
                    app:key="amazon_videos_time_of_day"
                    app:title="@string/apple_videos_time_of_day_title"
                    app:dialogTitle="@string/apple_videos_time_of_day_title" />
        </PreferenceCategory>
</PreferenceScreen>
